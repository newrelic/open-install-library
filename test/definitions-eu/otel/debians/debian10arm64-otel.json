{
    "global_tags": {
        "owning_team": "virtuoso",
        "Environment": "development",
        "Department": "product",
        "Product": "virtuoso"
    },

    "resources": [{
        "id": "host1",
        "provider": "aws",
        "type": "ec2",
        "size": "t4g.nano",
        "ami_name": "debian-10-arm64-202?????-*",
        "user_name": "admin"
    }],

    "instrumentations": {
        "resources": [
          {
              "id": "nr_infra_otel",
              "resource_ids": ["host1"],
              "provider": "newrelic",
              "source_repository": "https://github.com/newrelic/open-install-library.git",
              "deploy_script_path": "test/deploy/linux/newrelic-cli/install-recipe/roles",
              "params": {
                  "recipe_content_url": "https://raw.githubusercontent.com/newrelic/open-install-library/main/recipes/newrelic/infrastructure/otel/debian.yml",
                  "validate_output": "New Relic OpenTelemetry Collector\\s+\\(installed\\)",
                  "local_recipes": true
              }
          }
          ]
      }
}
