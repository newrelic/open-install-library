{
    "global_tags": {
        "owning_team": "OpenSource",
        "Environment": "development",
        "Department": "Product",
        "Product": "Virtuoso"
    },

    "resources": [{
        "id": "host1",
        "display_name": "AwsLinuxInfraHost",
        "provider": "aws",
        "ami_name": "amzn-ami-hvm-????.??.*-x86_64-gp2",
        "type": "ec2",
        "size": "t3.nano"
    }],

    "instrumentations": {
      "resources": [
        {
            "id": "nr_infra",
            "resource_ids": ["host1"],
            "provider": "newrelic",
            "source_repository": "https://github.com/newrelic/open-install-library",
            "deploy_script_path": "test/deploy/linux/newrelic-cli/install-recipe/roles",
            "params": {
                "recipe_content_url": "https://raw.githubusercontent.com/newrelic/open-install-library/main/recipes/newrelic/infrastructure/awslinux.yml",
                "validate_output": "New Relic installation complete"
            }
        }
        ]
    }
}
