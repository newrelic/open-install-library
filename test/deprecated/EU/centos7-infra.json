{
    "global_tags": {
        "owning_team": "virtuoso",
        "Environment": "development",
        "Department": "product",
        "Product": "virtuoso"
    },

    "resources": [{
        "id": "host1",
        "provider": "aws",
        "type": "ec2",
        "size": "t3.nano",
        "ami_name": "CentOS-7-????-????????_?.x86_64-*",
        "user_name": "centos"
    }],

    "instrumentations": {
        "resources": [
            {
                "id": "nr_infra",
                "resource_ids": ["host1"],
                "provider": "newrelic",
                "source_repository": "https://github.com/newrelic/open-install-library",
                "deploy_script_path": "test/deploy/linux/newrelic-cli/install/roles",
                "params": {
                    "local_recipes": true,
                    "validate_output": "Infrastructure Agent\\s+\\(installed\\)"
                }
            }
        ]
    }
}
