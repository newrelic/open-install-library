{
    "global_tags": {
        "owning_team": "OpenSource",
        "Environment": "development",
        "Department": "Product",
        "Product": "Virtuoso"
    },

    "resources": [{
        "id": "host1",
        "display_name": "AwsLinux2Logging",
        "provider": "aws",
        "ami_name": "amzn2-ami-hvm-2.0.????????.?-x86_64-gp2",
        "type": "ec2",
        "size": "t3.micro"
    }],

    "instrumentations": {
        "resources": [
            {
                "id": "nr_logging",
                "resource_ids": ["host1"],
                "provider": "newrelic",
                "source_repository": "https://github.com/newrelic/open-install-library",
                "deploy_script_path": "test/deploy/linux/newrelic-cli/install/roles",
                "params": {
                    "newrelic_cli_option": "-n logs-integration",
                    "validate_output": "logs-integration  \\(installed\\)",
                    "local_recipes": true
                }
            }
        ]
    }
}
