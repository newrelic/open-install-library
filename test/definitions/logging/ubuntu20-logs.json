{
  "global_tags": {
    "owning_team": "OpenSource",
    "Environment": "development",
    "Department": "Product",
    "Product": "Virtuoso"
  },

  "resources": [
    {
      "id": "host1",
      "display_name": "Ubuntu20Logging",
      "provider": "aws",
      "type": "ec2",
      "size": "t3.micro",
      "ami_name": "ubuntu/images/hvm-ssd/ubuntu-focal-20.04-amd64-server-*",
      "user_name": "ubuntu"
    }
  ],

  "instrumentations": {
    "resources": [
      {
        "id": "nr_logging_ubutu20",
        "resource_ids": ["host1"],
        "provider": "newrelic",
        "source_repository": "https://github.com/newrelic/open-install-library",
        "deploy_script_path": "test/deploy/linux/newrelic-cli/install/roles",
        "params": {
          "newrelic_cli_option": "-n logs-integration",
          "validate_output": "Logs Integration  \\(installed\\)",
          "local_recipes": true
        }
      }
    ]
  }
}
