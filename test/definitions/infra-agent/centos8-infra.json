{
    "global_tags": {
        "owning_team": "OpenSource",
        "Environment": "development",
        "Department": "Product",
        "Product": "Virtuoso"
    },

    "resources": [{
        "id": "host1",
        "display_name": "Centos8InfraHost",
        "provider": "aws",
        "type": "ec2",
        "size": "t3.nano",
        "ami_name": "CentOS 8.2.2004 x86_64",
        "user_name": "centos"
    }],

    "instrumentations": {
        "resources": [
            {
                "id": "nr_infra",
                "resource_ids": ["host1"],
                "provider": "newrelic",
                "source_repository": "https://github.com/newrelic/open-install-library",
                "deploy_script_path": "test/deploy/linux/roles",
                "params": {
                    "recipe_content_url": [
                        "https://raw.githubusercontent.com/newrelic/open-install-library/main/recipes/newrelic/infra-agent/centos_rhel.yml"
                    ]
                }
            },
            {
                "id": "nr_infra_is_reporting",
                "resource_ids": ["host1"],
                "provider": "newrelic",
                "source_repository": "https://github.com/newrelic/open-install-library",
                "deploy_script_path": "test/deploy/assertions/is-reporting/roles",
                "params": {
                    "nrql_query": "name = 'HOSTNAME' AND domain = 'INFRA'"
                }
            }
        ]
    }
}
