{
    "global_tags": {
        "owning_team": "OpenSource",
        "Environment": "development",
        "Department": "Product",
        "Product": "Virtuoso"
    },

    "resources": [{
        "id": "host1",
        "display_name": "Debian9InfraHost",
        "provider": "aws",
        "type": "ec2",
        "size": "t3.nano",
        "ami_name": "SupportedImages debian-stretch-hvm-x86_64-*",
        "user_name": "admin"
    }],

    "instrumentations": {
      "resources": [
        {
            "id": "nr_infra",
            "resource_ids": ["host1"],
            "provider": "newrelic",
            "source_repository": "https://github.com/newrelic/open-install-library",
            "deploy_script_path": "test/deploy/linux/newrelic-cli/install-recipe/roles",
            "params": {
                "recipe_content_url": [
                    "https://raw.githubusercontent.com/newrelic/open-install-library/main/recipes/newrelic/infra-agent/debian.yml"
                ]
            }
        },
        {
            "id": "nr_infra_is_having_data",
            "resource_ids": ["host1"],
            "provider": "newrelic",
            "source_repository": "https://github.com/newrelic/open-install-library",
            "deploy_script_path": "test/deploy/assertions/recipe-is-valid/roles",
            "params": {
                "nrql_query": "SELECT count(*) from SystemSample where hostname like 'HOSTNAME' SINCE 30 minutes ago"
            }
        },
        {
            "id": "nr_infra_is_reporting",
            "resource_ids": ["host1"],
            "provider": "newrelic",
            "source_repository": "https://github.com/newrelic/open-install-library",
            "deploy_script_path": "test/deploy/assertions/is-reporting/roles",
            "params": {
                "nrql_query": "name = 'HOSTNAME' AND domain = 'INFRA'"
            }
        }
        ]
    }
}
