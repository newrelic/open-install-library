{
    "global_tags": {
        "owning_team": "OpenSource",
        "Environment": "development",
        "Department": "Product",
        "Product": "Virtuoso"
    },

    "resources": [{
        "id": "host1",
        "display_name": "RedHat8Arm64InfraHost",
        "provider": "aws",
        "type": "ec2",
        "size": "t4g.micro",
        "ami_name": "RHEL-8.?.?_HVM-????????-arm64-?-Hourly2-GP2"
    }],

    "instrumentations": {
        "resources": [
            {
                "id": "nr_infra",
                "resource_ids": ["host1"],
                "provider": "newrelic",
                "source_repository": "https://github.com/newrelic/open-install-library",
                "deploy_script_path": "test/deploy/linux/newrelic-cli/install-recipe/roles",
                "params": {
                    "recipe_content_url": "https://raw.githubusercontent.com/newrelic/open-install-library/main/recipes/newrelic/infrastructure/centos_rhel.yml",
                    "validate_output": "New Relic installation complete"
                }
            }
        ]
    }
}
