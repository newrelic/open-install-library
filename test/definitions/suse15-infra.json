{
    "global_tags": {
        "owning_team": "OpenSource",
        "Environment": "development",
        "Department": "Product",
        "Product": "Virtuoso"
    },

    "resources": [{
        "id": "host1",
        "display_name": "Suse15InfraHost",
        "provider": "aws",
        "type": "ec2",
        "size": "t3a.nano",
        "ami_name": "openSUSE-Leap-15.2-v????????-HVM-x86_64-*"
    }],

    "instrumentations": {
      "resources": [
        {
            "id": "nr_infra",
            "resource_ids": ["host1"],
            "provider": "newrelic",
            "source_repository": "https://github.com/newrelic/open-install-library",
            "deploy_script_path": "test/deploy/linux/roles",
            "params": {
                "recipe_content_url": [
                    "https://raw.githubusercontent.com/newrelic/open-install-library/main/recipes/newrelic/infra-agent/amazonlinux2.yml",
                    "https://raw.githubusercontent.com/newrelic/open-install-library/main/recipes/newrelic/logs/logs.yml",
                    "https://raw.githubusercontent.com/newrelic/open-install-library/main/recipes/newrelic/flex/flex.yml"
                ]
            }
        }],
      "global": [
        {
            "id": "nr_infra_is_reporting",
            "provider": "newrelic",
            "source_repository": "https://github.com/newrelic/open-install-library",
            "deploy_script_path": "test/deploy/assertions/is-reporting/roles",
            "params": {
                "nrql_query": "name = '[resource:host1:private_dns_name]' AND domain = 'INFRA'"
            }
        }]
    }
}
