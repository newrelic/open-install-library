{
  "global_tags": {
    "owning_team": "OpenSource",
    "Environment": "development",
    "Department": "Product",
    "Product": "Virtuoso"
  },
  "resources": [
    {
      "id": "javatomcat",
      "display_name": "AwsLinux2InfraJavaInstallHost",
      "provider": "aws",
      "type": "ec2",
      "size": "t2.micro",
      "ami_name": "amazonlinux-2-base*",
      "user_name": "ec2-user"
    }
  ],
  "services": [
    {
      "id": "java1",
      "source_repository": "https://github.com/newrelic/open-install-library.git",
      "deploy_script_path": "test/deploy/linux/tomcat/systemd/cmdLine/install/linux/roles",
      "port": 6001,
      "destinations": ["javatomcat"]
    }
  ],
  "instrumentations": {
    "resources": [
      {
        "id": "javatomcat",
        "resource_ids": [
          "javatomcat"
        ],
        "provider": "newrelic",
        "source_repository": "https://github.com/newrelic/open-install-library.git",
        "deploy_script_path": "test/deploy/linux/newrelic-cli/install-recipe/roles",
        "params": {
          "recipe_content_url": "https://raw.githubusercontent.com/newrelic/open-install-library/main/recipes/newrelic/apm/java/linux.yml",
          "validate_output": "New Relic installation complete"
        }
      }
    ]
  }
}
