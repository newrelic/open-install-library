{
  "global_tags": {
      "owning_team": "OpenSource",
      "Environment": "development",
      "Department": "Product",
      "Product": "Virtuoso"
  },

  "resources": [{
      "id": "host1",
      "display_name": "AwsLinux2InfraNginxInstallHost",
      "provider": "aws",
      "type": "ec2",
      "size": "t3.nano"
  }],

  "services": [{
    "id": "nginx1",
    "destinations": ["host1"],
    "source_repository": "https://github.com/newrelic/open-install-library.git",
    "deploy_script_path": "test/deploy/nginx/install/roles",
    "port": 80
  }],

  "instrumentations": {
    "resources": [
      {
          "id": "nr_infra_nginx",
          "resource_ids": ["host1"],
          "provider": "newrelic",
          "source_repository": "https://github.com/newrelic/open-install-library.git",
          "deploy_script_path": "test/deploy/linux/roles",
          "params": {
              "recipe_content_url": [
                  "https://raw.githubusercontent.com/newrelic/open-install-library/main/recipes/newrelic/infra-agent/amazonlinux2.yml",
                  "https://raw.githubusercontent.com/newrelic/open-install-library/main/recipes/newrelic/nginx/nginx_amazonLinux2.yml"
              ]
          }
      },
      {
          "id": "nr_infra_is_reporting",
          "resource_ids": ["host1"],
          "provider": "newrelic",
          "source_repository": "https://github.com/newrelic/open-install-library.git",
          "deploy_script_path": "test/deploy/assertions/is-reporting/roles",
          "params": {
              "nrql_query": "domain = 'INFRA' and type = 'NGINXSERVER' AND name LIKE '%[resource:host1:instance_id]%'"
          }
      }
      ]
  }
}
