{
  "global_tags": {
      "owning_team": "OpenSource",
      "Environment": "development",
      "Department": "Product",
      "Product": "Virtuoso"
  },

  "resources": [{
      "id": "host1",
      "display_name": "AwsLinux2InfraNginxInstallHost",
      "provider": "aws",
      "type": "ec2",
      "size": "t3.nano"
  }],

  "services": [{
    "id": "nginx1",
    "destinations": ["host1"],
    "source_repository": "https://github.com/newrelic/open-install-library.git",
    "deploy_script_path": "test/deploy/linux/nginx/install/linux2/roles",
    "port": 80,
    "params":{
          "create_env_var": true,
          "open_status_url": true
    }
  }],

  "instrumentations": {
    "resources": [
      {
          "id": "nr_infra_nginx",
          "resource_ids": ["host1"],
          "provider": "newrelic",
          "source_repository": "https://github.com/newrelic/open-install-library.git",
          "deploy_script_path": "test/deploy/linux/newrelic-cli/install-recipe/roles",
          "params": {
              "recipe_content_url": "https://raw.githubusercontent.com/newrelic/open-install-library/main/recipes/newrelic/infrastructure/ohi/nginx/rhel.yml",
              "validate_output": "New Relic installation complete"
          }
      }
      ]
  }
}
