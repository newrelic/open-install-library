{
    "global_tags": {
        "owning_team": "OpenSource",
        "Environment": "development",
        "Department": "Product",
        "Product": "Virtuoso"
    },
  
    "resources": [{
        "id": "host1failure",
        "display_name": "Debian10InfraNginxInstallHostTargetedFailure",
        "provider": "aws",
        "type": "ec2",
        "size": "t3.nano",
        "ami_name": "debian-10-amd64-2020????-???-*",
        "user_name": "admin"
    }],
  
    "services": [{
      "id": "nginx1",
      "destinations": ["host1failure"],
      "source_repository": "https://github.com/newrelic/open-install-library.git",
      "deploy_script_path": "test/deploy/linux/nginx/install/debian/roles",
      "port": 80,
      "params":{
        "inaccessible_status_stub": true
    }
    }],
  
    "instrumentations": {
      "resources": [
        {
            "id": "nr_infra_nginx",
            "resource_ids": ["host1failure"],
            "provider": "newrelic",
            "source_repository": "https://github.com/newrelic/open-install-library.git",
            "deploy_script_path": "test/deploy/linux/newrelic-cli/install-recipe/roles",
            "params": {
                "recipe_content_url": "https://raw.githubusercontent.com/newrelic/open-install-library/main/recipes/newrelic/infrastructure/debian.yml,https://raw.githubusercontent.com/newrelic/open-install-library/main/recipes/newrelic/infrastructure/ohi/nginx/linux.yml",
                "validate_output": "New Relic installation complete"
            }
        },
        {
          "id": "recipeValidation",
          "resource_ids": [ "host1failure" ],
          "provider": "newrelic",
          "source_repository": "https://github.com/newrelic/open-install-library.git",
          "deploy_script_path": "test/deploy/linux/newrelic-cli/validate-recipe/roles",
          "params": {
            "nrql_query": "SELECT count(*) FROM VirtuosoInstallRecipe WHERE name ='nginx-open-source-integration' AND hostName like '{{.HOSTNAME}}' AND status='DETECTED' since 5 minutes ago"
          }
        }
        ]
    }
  }