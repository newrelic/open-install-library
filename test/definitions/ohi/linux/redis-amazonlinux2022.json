{
  "global_tags": {
    "owning_team": "OpenSource",
    "Environment": "development",
    "Department": "Product",
    "Product": "Virtuoso"
  },

  "resources": [
    {
      "id": "host1",
      "display_name": "AmazonLinux2022Host",
      "provider": "aws",
      "type": "ec2",
      "size": "t2.small",
      "ami_name": "al2022-ami-2022.0.*-x86_64",
      "user_name": "ec2-user"
    }
  ],

  "services": [
    {
      "id": "redis1",
      "destinations": ["host1"],
      "source_repository": "https://github.com/newrelic/open-install-library.git",
      "deploy_script_path": "test/deploy/linux/redis/install/rhel/roles",
      "port": 6379,
      "params": {
        "create_env_var": true
      }
    }
  ],

  "instrumentations": {
    "resources": [
      {
        "id": "nr_redis_amazonlinux2022",
        "resource_ids": ["host1"],
        "provider": "newrelic",
        "source_repository": "https://github.com/newrelic/open-install-library.git",
        "deploy_script_path": "test/deploy/linux/newrelic-cli/install/roles",
        "params": {
          "newrelic_cli_option": "-n redis-open-source-integration",
          "validate_output": "(redis-open-source-integration|Redis Integration)\\s+\\(installed\\)",
          "local_recipes": true
        }
      }
    ]
  }
}