{
    "global_tags": {
        "owning_team": "OpenSource",
        "Environment": "development",
        "Department": "Product",
        "Product": "Virtuoso"
    },

    "resources": [{
        "id": "host1",
        "display_name": "AwsLinux2InfraHost",
        "provider": "aws",
        "type": "ec2",
        "size": "t3.nano"
    }],

    "instrumentations": {
      "resources": [
        {
            "id": "nr_infra",
            "resource_ids": ["host1"],
            "provider": "newrelic",
            "source_repository": "https://github.com/newrelic/open-install-library",
            "deploy_script_path": "test/deploy/linux/newrelic-cli/install/roles",
            "params": {
                "local_recipes": true
            }
        }
        ]
    }
}
