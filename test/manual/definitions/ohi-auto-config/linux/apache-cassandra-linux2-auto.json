{
  "global_tags": {
    "owning_team": "OpenSource",
    "Environment": "development",
    "Department": "Product",
    "Product": "Virtuoso"
  },

  "resources": [{
    "id": "apachecasslinux2auto",
    "display_name": "ApacheCassandraLinux2Host",
    "provider": "aws",
    "type": "ec2",
    "size": "t3.small",
    "ami_name": "amazonlinux-2-base*"
  }],

  "services": [{
    "id": "apache1",
    "destinations": ["apachecasslinux2auto"],
    "source_repository": "https://github.com/newrelic/open-install-library.git",
    "deploy_script_path": "test/deploy/linux/apache/install/rhel/roles",
    "port": 80
  },{
    "id": "cassandra1",
    "destinations": ["apachecasslinux2auto"],
    "source_repository": "https://github.com/newrelic/open-install-library.git",
    "deploy_script_path": "test/deploy/linux/cassandra/install/linux2/roles",
    "port": 9042,
    "params": {
      "create_newrelic_user": true
    }
  }]
}